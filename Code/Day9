        <label>
            Password:
            <input type="password" name="password">
        </label>
        <br><br>

        <p>Choose your role:</p>
        <label>
            <input type="radio" name="role"> Student
        </label>
        <label>
            <input type="radio" name="role"> Developer
        </label>
        <br><br>

        <label>
            <input type="checkbox"> Human
        </label>
        <br><br>

        <button type="submit">Submit</button>
